/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "resolveJsonModule": false,
    "paths": {
      "@components/govuk": ["./src/app/components/govuk/index.ts"],
      "@components/moj": ["./src/app/components/moj/index.ts"],
      "@components/scotgov": ["./src/app/components/scotgov/index.ts"],
      "@components/custom": ["./src/app/components/custom/index.ts"],
      "@components/alphagov": ["./src/app/components/alphagov/index.ts"],
      "@components/abstract": ["./src/app/components/abstract/index.ts"],
      "@enums": ["./src/app/enums/index.ts"],
      "@enums/fines": ["./src/app/flows/fines/enums/index.ts"],
      "@services": ["./src/app/services/index.ts"],
      "@services/fines/*": [
        "./src/app/flows/fines/services/*.service.ts",
        "./src/app/flows/fines/services/*.interface.ts",
        "./src/app/flows/fines/services/*.constant.ts"
      ],
      "@interfaces": ["./src/app/interfaces/index.ts"],
      "@interfaces/components/abstract": ["./src/app/components/abstract/interfaces/index.ts"],
      "@interfaces/components/govuk": ["./src/app/components/govuk/interfaces/index.ts"],
      "@interfaces/components/alphagov": ["src/app/components/alphagov/interfaces/index.ts"],
      "@interfaces/fines": ["./src/app/flows/fines/interfaces/index.ts"],
      "@interfaces/flows/routing": ["./src/app/flows/routing/interfaces/index.ts"],
      "@mocks": ["./src/app/mocks/index.ts"],
      "@mocks/fines": ["src/app/flows/fines/services/opal-fines-service/mocks/index.ts"],
      "@guards": ["./src/app/guards/index.ts"],
      "@constants": ["./src/app/constants/index.ts"],
      "@constants/fines": ["./src/app/flows/fines/constants/index.ts"],
      "@interceptors": ["./src/app/interceptors/index.ts"],
      "@resolvers": ["./src/app/resolvers/index.ts"],
      "@routing/pages": ["./src/app/pages/routing/index.ts"],
      "@routing/fines": ["./src/app/flows/fines/routing/index.ts"],
      "@routing/flows": ["./src/app/flows/routing/index.ts"],
      "@types-guards": ["./src/app/guards/types/index.ts"],
      "@validators": ["./src/app/validators/index.ts"]
    },
    "allowSyntheticDefaultImports": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": ["src", "node_modules/cypress", "src/app/interfaces/.ts"],
  "exclude": ["node_modules/cypress", "**/*.mock.ts", "**/helpers/*.ts"]
}

// include + exclude - Issue with cypress + jasmine

// https://github.com/cypress-io/cypress/issues/7552#issuecomment-717329891
