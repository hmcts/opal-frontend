{
  "node-env": "development",
  "frontend-hostname": {
    "dev": "http://localhost:4200",
    "prod": "http://localhost:4000"
  },

  "opal-api": {
    "url": "http://localhost:4550"
  },
  "features": {
    "redis": {
      "enabled": false
    },
    "sso": {
      "enabled": false
    },
    "helmet": {
      "enabled": false
    },
    "launch-darkly": {
      "enabled": false,
      "stream": false
    }
  },
  "session": {
    "prefix": "opal-session",
    "ttlInSeconds": 1200,
    "maxAge": null,
    "secure": false
  },
  "csrf": {
    "cookieName": "XSRF-TOKEN",
    "secure": false
  },
  "secrets": {
    "opal": {
      "redis-connection-string": "redis://localhost:6379",
      "opal-frontend-session-secret": "supersecret",
      "opal-frontend-cookie-secret": "supersecret",
      "opal-frontend-csrf-secret": "supersecret"
    }
  },
  "expiry": {
    "testMode": false,
    "default": {
      "expiryTimeInMin": 30,
      "warningThresholdInMin": 30
    },
    "test": {
      "expiryTimeInMin": 5,
      "warningThresholdInMin": 5
    }
  }
}
