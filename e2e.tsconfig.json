{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/e2e",
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@e2e/*": ["cypress/e2e/*"]
    }
  },
  "include": [
    "cypress/e2e/**/*.ts",
    "cypress/support/**/*.ts",
    "cypress/shared/**/*.ts"
  ],
  "exclude": ["node_modules", "cypress/component", "**/*.cy.ts"]
}
